<table id="beam<%= beam_id %>">
  <tr>
    <td class="beam_information">
      <div class="beam_information_top">
        <div class="text-large">Beam <%= beam_id %></div>
        <div class="beam_status">&nbsp;<!-- ON/OFF image here --></div>
        <div class="beam_frequency">&nbsp;<!-- MHz here --></div>
        <div class="beam_location">&nbsp;<!-- RA / DEC here --></div>
        <div class="float-wall"></div>
      </div>

      <div class="beam_information_bottom">
        <div><%= render 'baseline', :baseline_id => beam_id %></div>
      </div>
    </td>
    <td class="beam_information_center">
      <div>&nbsp;<!-- Description here --></div>
      <div><%= render 'waterfall', :waterfall_id => beam_id %></div>
    </td>
    <td class="beam_frequency_coverage">
    </td>
  </tr>
  <tr>
    <td colspan="3">
      <div>
      <div class="text-small" style="float:left;">Past Frequency Coverage</div>
      <div style="float:left; padding-top:2px; padding-left:25px;">
        <table id="frequency_cover_data_table<%=beam_id%>" class="frequency_cover_data_table">
          <tr>
            <% frequency_num_elements.times do %>
              <td class="off"></td>
            <% end %>
          </tr>
          <tr>
            <td class="text-smaller" colspan="10">0.0</td>
            <td class="text-smaller" colspan="10">1.0</td>
            <td class="text-smaller" colspan="10">2.0</td>
            <td class="text-smaller" colspan="10">3.0</td>
            <td class="text-smaller" colspan="10">4.0</td>
            <td class="text-smaller" colspan="10">5.0</td>
            <td class="text-smaller" colspan="10">6.0</td>
            <td class="text-smaller" colspan="10">7.0</td>
            <td class="text-smaller" colspan="10">8.0</td>
            <td class="text-smaller" colspan="10">9.0</td>
            <td class="text-smaller" colspan="10">10.0</td>
          </tr>
        </table>
      </div>
      <div class="float-wall"></div>
      </div>
    </td>
  </tr>
</table>
